<style>
  .search-btn{
    background-color:#4E3629;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover{
    background-color:#4E3629 ;
    color: #fff;
  }
  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius: 25px;
    padding: 0.5rem 3rem;
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a href="/"><i class="fa-solid fa-mug-hot home-icon"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/">Home</a>
        </div>
        <div class="navbar-nav">
          <a class="nav-link" href="/caves">Explore</a>
        </div>

        <form class="d-flex">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search Cafe" aria-label="Search">
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>

        <div class="navbar-nav ms-auto">
          
          <% if(!currUser) {%>
          <a class="nav-link" href="/signup"><b>Sign-up <i class="fa-solid fa-user-plus"></i></b></a>
          <a class="nav-link" href="/login"><b>Login <i class="fa-solid fa-right-to-bracket fa-shake"></i></b></a>
          <% } if(currUser){%>
            <% if(currUser.userType=="cafeOwner"){%>
              <a class="nav-link" href="/owners/<%= currUser._id %>/events/new">Host an event</a>
            <%}else if(currUser.userType=="normalUser"){%>
              <a class="nav-link" href="/confirmation">Register as cafe Owner</a>
              <a class="nav-link" href="/owners/<%= currUser._id %>/events/new">Register as singer</a>
            <%}%>
          <a class="nav-link" href="/logout"><b>Logout <i class="fa-solid fa-right-from-bracket"></i></b></a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>