<% layout("/layouts/boilerplate") %>
  <div class="index-container">
    <div class="searchBar">
      <h4>Filter by</h4>
      <form class="filters-form" action="/events" method="POST">
        <label for="cafeText">Event Name</label>
        <input class="form-control me-2 search-inp" name="eventText" type="search" placeholder="chappan" aria-label="Search">
        <label for="location">Location</label>
        <input class="form-control me-2 search-inp" name="locationText" type="search" placeholder="Indore" aria-label="Search">
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
      </form>

    </div>
    
    

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 offset-2">
      <% if(allEvents.length ==0){%>
        <p style="color: red;" class="offset-3">No match exist of your search!</p>
      <% }%>
      <% for(let event of allEvents) { %>
        <a href="/events/<%= event._id %>" class="listing-links">
          <div class="card listing-card">
            <img class="card-img-top" src="<%= event.image %>" alt="cardimg" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= event.title %>
                </b><br>
                <i class="fa-solid fa-location-dot"></i> &nbsp; <%= event.cafe.location %>
                <br>
                <i class="fa-solid fa-calendar-days"></i> &nbsp; <%= event.date %>
                <br>
                <i class="fa-solid fa-clock"></i> &nbsp; <%= event.time %>

              </p>
               
            </div>
          </div>
        </a>

        <% } %>
    </div>
  </div>
  