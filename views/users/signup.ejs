<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">Signup on Wanderlust</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3 ">
                <label for="username" class="form-label" id="username">Username</label>
                <input name="username" type="text" class="form-control" required/>
                <div class="invalid-feedback">
                  Username is invalid!
                </div>
                <div class="valid-feedback">
                  Username looks good!
                </div>
                
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="type">User type</label>
                <select class="form-select" id="type" name="type" required>
                  <option selected value="normalUser">Normal User</option>
                  <option value="cafeOwner">Cafe Owner</option>
                  <option value="singer">Singer</option>
                </select>
              </div>
            <div class="mb-3 ">
                <label for="email" class="form-label" id="email">Email</label>
                <input name="email" type="email" class="form-control" required/>
            </div>
            <div class="mb-3 ">
                <label for="password" class="form-label" id="password">Password</label>
                <input name="password" type="password" class="form-control" required/>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>